header.header
  div.breadcrumbs
    div.breadcrumbs__link
      a.no-link-decoration(href="#") Customers
    div.breadcrumbs__separator
      i.fa.fa-chevron-right(aria-hidden="true")
    div.breadcrumbs__link.breadcrumbs__link--current
      span Max Jones

  div.header_right-part
    div.search-form
      form
        input.search-form__input(type="text" placeholder="Search")
        div.search-form__icon
          i.fa.fa-search(aria-hidden="true")

    div.notification
      div.notification__icon
        i.fa.fa-bell(aria-hidden="true")
        div.notification__msg
          span 4

    div.user-profile
      div.user-profile__avatar
        a(href="#")
          img.user-profile__img(src="assets/img/user-avatar.png")
      div.user-profile__username
        span Hello Lauren
